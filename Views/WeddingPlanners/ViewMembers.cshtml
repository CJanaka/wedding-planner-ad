@model IEnumerable<wedding_planer_ad.Models.DTO.CoupleMemberDto>

@{
    Layout = "~/Views/WeddingPlanners/_WeddingPlannerLayout.cshtml";
    ViewData["Title"] = "Wedding planner Dashboard";
}

<h2>Couple Details</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No details found.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Couple ID</th>
                <th>User ID</th>
                <th>User Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.Id</td>
                    <td>@member.UserId</td>
                    <td>@member.UserName</td>
                    <td>@member.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
@model IEnumerable<wedding_planer_ad.Models.ApplicationUser>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Wedding planner Dashboard";
}

<h2>Couples</h2>

<a class="btn btn-success mb-3" asp-action="AddCouple" asp-controller="Admin">
    <i class="fas fa-plus"></i> + Add New Couple
</a>    

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var couple in Model)
        {
            <tr onclick="window.location.href='@Url.Action("CoupleDetails", "Admin", new { id = couple.Id })'" style="cursor:pointer;">
                <td>@couple.Email</td>
                <td>@couple.FirstName</td>
                <td>@couple.LastName</td>
                <td>@couple.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>

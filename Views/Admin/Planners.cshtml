@model List<wedding_planer_ad.Models.ApplicationUser>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Wedding planner Dashboard";
}

<h2>Wedding Planners</h2>

<a class="btn btn-success mb-3" asp-action="AddPlanner" asp-controller="Admin">
    <i class="fas fa-plus"></i> + Add New Planner
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var planner in Model)
        {
            <tr onclick="window.location.href='@Url.Action("PlannerDetails", "Admin", new { id = planner.Id })'" style="cursor:pointer;">
                <td>@planner.Email</td>
                <td>@planner.FirstName</td>
                <td>@planner.LastName</td>
                <td>@planner.PhoneNumber</td>
            </tr>
        }
    </tbody>
</table>

@model wedding_planer_ad.Models.WeddingTimeline

@{
    Layout = "~/Views/WeddingPlanners/_WeddingPlannerLayout.cshtml";
    ViewData["Title"] = "Add Timeline Event";
}

<h2>Add Timeline Event</h2>

<style>
    .form-group {
        margin-bottom: 1.5rem; /* Similar to Bootstrap's mb-4 */
    }

    form-actions {
        display: flex;
        gap: 5px;
        justify-content: flex-start;
        margin-top: 1.5rem;
    }

    .form-actions .btn {
        min-width: 120px;
        margin-right: 5%;
    }
</style>

<form asp-action="AddTimeline" method="post">
    <!-- Hidden input for CoupleId -->
    <input type="hidden" name="CoupleId" value="@Model.CoupleId" />

    <div class="form-group">
        <label asp-for="EventName">Event Name</label>
        <input asp-for="EventName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventTime">Event Time</label>
        <input asp-for="EventTime" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EventDescription">Event Description</label>
        <textarea asp-for="EventDescription" class="form-control"></textarea>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-success">Add Event</button>
    </div>
</form>

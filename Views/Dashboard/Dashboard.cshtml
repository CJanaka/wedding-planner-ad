                                    aria-selected="@(category.i == 0 ? "true" : "false")">
                                @category.cat.Name
                            </button>
                        </li>
                    }
                </ul>
                <div class="tab-content" id="modalTaskTabsContent">
                    @foreach (var category in Model.TodoCategories.Select((cat, i) => new { cat, i }))

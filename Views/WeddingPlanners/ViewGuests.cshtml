@model IEnumerable<wedding_planer_ad.Models.Guest>

@{
    Layout = "~/Views/WeddingPlanners/_WeddingPlannerLayout.cshtml";
    ViewData["Title"] = "Wedding planner Dashboard";
}

<h2>Wedding Guests</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No Guests for wedding found.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Enail</th>
                <th>RSVP Status</th>
                <th>Meal Preference</th>
                <th>Seating Arrangement</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.FirstName</td>
                    <td>@member.LastName</td>
                    <td>@member.Email</td>
                    <td>@member.RSVPStatus</td>
                    <td>@member.MealPreference</td>
                    <td>@member.SeatingArrangement</td>
                </tr>
            }
        </tbody>
    </table>
}